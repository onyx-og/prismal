{
  "name": "prismal",
  "version": "0.0.1",
  "description": "Full-spectrum design system.",
  "directories": {
    "doc": "docs"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "dotenv": "^17.2.2"
  },
  "scripts": {
    "build:react": "npm run -w packages/react build",
    "start:showcase": "npm run -w packages/showcase start",
    "build:showcase": "npm run -w packages/showcase build",
    "build:react-native": "npm run -w packages/react-native build",
    "start:showcase-native": "npm run -w packages/showcase start",
    "build:showcase-native": "npm run -w packages/showcase build",
    "start:website": "npm run -w packages/website start",
    "build:website": "npm run -w packages/website build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onyx-og/prismal.git"
  },
  "author": "Onyx <hello@onyx.ac> (https://onyx.ac)",
